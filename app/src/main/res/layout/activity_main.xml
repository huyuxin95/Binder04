<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jju.yuxin.binder04.MainActivity">

    <Button
        android:id="@+id/bt_connect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_connect"/>
    <Button
        android:id="@+id/bt_disconnect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_disconnect"/>
    <Button
        android:id="@+id/bt_getbooklist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_getbook"/>
    <Button
        android:id="@+id/bt_addbook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_addbook"/>
    </LinearLayout>
